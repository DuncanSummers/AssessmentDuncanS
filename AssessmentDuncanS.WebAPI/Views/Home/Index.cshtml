    <img id="preventia" src="~/Views/Shared/assets/PreventiaLogoSmall.png" alt="preventia-logo" />
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Messages</h2>
        <div class="col-md-4">
            <ul>
